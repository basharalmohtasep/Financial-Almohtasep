@model CheckeView

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>عرض الشيك</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 20px;
        }

        .cheque {
            width: 1100px;
            height: 600px; /* Adjust height for a more cheque-like appearance */
            border: 2px solid #000;
            border-radius: 8px;
            margin: 0 auto;
            padding: 30px;
            background-color: #fff;
            position: relative;
            background-image: url('/path/to/check-background.png'); /* Light patterned background */
            background-size: 100% 100%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

        .cheque-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            border-bottom: 2px solid #ccc;
        }

        .logo {
            width: 150px;
        }

        .bank-info {
            text-align: right;
            font-size: 14px;
            color: #555;
        }

        .cheque-title {
            text-align: center;
            font-size: 22px;
            font-weight: bold;
            color: #333;
            margin: 20px 0;
        }

        .cheque-content {
            padding: 20px;
        }

        .field {
            margin-bottom: 20px;
        }

        .label {
            font-size: 16px;
            color: #555;
        }

        .value {
            font-size: 18px;
            font-weight: bold;
            color: #333;
            margin-right: 10px;
        }

        .amount-section {
            border: 1px dashed #333;
            padding: 15px;
            font-size: 18px;
            color: #333;
            margin-bottom: 20px;
        }

        .cheque-number {
            font-size: 18px;
            color: #555;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .signature {
            position: absolute;
            bottom: 30px;
            right: 30px;
            text-align: center;
            font-size: 14px;
            color: #333;
        }

        .signature-line {
            border-top: 1px solid #000;
            width: 200px;
            margin-top: 10px;
        }

        .footer {
            text-align: center;
            font-size: 12px;
            color: #999;
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
        }
    </style>
</head>

<body>
    <div class="cheque">
        <!-- Header -->
        <div class="cheque-header">
            @if (Model.Check.Bank == BankName.ArabBank)
            {
                <img src="~/Img/Logo2.png" alt="Bank Logo" class="logo">
            }
            @if (Model.Check.Bank == BankName.IslamicBank)
            {
                <img src="~/Img/البنك-الاسلامي-الاردني.jpg" alt="Bank Logo" class="logo">
            }
            @if (Model.Check.Bank == BankName.InternationalArabIslamicBank)
            {
                <img src="~/Img/logo.jpg" alt="Bank Logo" class="logo">
            }
            <div class="bank-info">
                <p>بنك: <strong>@Model.Check.Bank</strong></p>
                <p>تاريخ: <strong>@Model.Check.DueDate.ToString("yyyy/MM/dd")</strong></p>
            </div>
        </div>

        <!-- Title -->
        <div class="cheque-title">شيك مصرفي</div>

        <!-- Cheque Number -->
        <div class="cheque-number">
            رقم الشيك: <strong>@Model.Check.CheckNumber</strong>
        </div>

        <!-- Content -->
        <div class="cheque-content">
            <!-- Payee -->
            <div class="field">
                <span class="label">السيد/السيدة:</span>
                <span class="value">@Model.Payee.Name</span>
            </div>

            <!-- Amount -->
            <div class="amount-section">
                <p>
                    المبلغ بالأرقام:
                    <strong>
                        @(Model.Check.Amount != 0
                            ? string.Format("{0:N0}", Model.Check.Amount) + " دينار"
                            : "المبلغ غير متوفر")
                    </strong>
                </p>
                <p>المبلغ كتابة: <strong>@NumberToWordsConverter.ConvertAmountToWords(Model.Check.Amount)</strong></p>
            </div>
        </div>

        <!-- Signature -->
        <div class="signature">
            <span>التوقيع:</span>
            <div class="signature-line"></div>
        </div>

        <!-- Footer -->
        <div class="footer">
            يُرجى عدم الكتابة تحت هذا السطر
        </div>
    </div>
</body>

</html>
