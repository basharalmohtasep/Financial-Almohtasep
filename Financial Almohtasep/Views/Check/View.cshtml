@model CheckeView;
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>عرض الشيك</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 20px;
        }

        .cheque {
            width: 1000px;
            height: 500px;
            border: 1px solid #000;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            position: relative;
            background-image: url('/path/to/check-background.png'); /* Replace with your background image */
            background-size: cover;
            background-repeat: no-repeat;
        }

        .logo {
            position: absolute;
            top: 20px;
            left: 20px;
            width: 150px;
        }

        .date {
            position: absolute;
            top: 40px;
            right: 30px;
            font-size: 16px;
        }

        .title {
            position: absolute;
            top: 40px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 20px;
            font-weight: bold;
        }

        .payee-section {
            position: absolute;
            top: 120px;
            right: 30px;
            font-size: 18px;
        }

        .amount-section {
            position: absolute;
            top: 180px;
            right: 30px;
            font-size: 18px;
        }

        .sum-section {
            position: absolute;
            top: 250px;
            right: 30px;
            font-size: 16px;
            font-weight: bold;
        }

        .bank-section {
            position: absolute;
            bottom: 80px;
            left: 30px;
            font-size: 16px;
        }

        .signature {
            position: absolute;
            bottom: 50px;
            right: 30px;
            text-align: center;
        }

        .footer {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 12px;
            color: #555;
        }
    </style>
</head>

<body>
    <div class="cheque">
        <!-- Logo -->

        <!-- Title -->
        <div class="title">المستفيد الأول</div>

        <!-- Date -->
        <div class="date">
            التاريخ: @Model.Check.DueDate.ToString("yyyy/MM/dd")
        </div>

        <!-- Payee -->
        <div class="payee-section">
            السيد/السيدة: <strong>@Model.Payee.Name</strong>
        </div>

        <!-- Amount -->
        <div class="amount-section">
            المبلغ: 
            <strong>@Model.Check.Amount.ToString("N0") دينار</strong>
            و 
            <strong>@(Model.Check.Amount * 100 % 100) فلس</strong>
        </div>

        <!-- The Sum Of -->
        <div class="sum-section">
            المبلغ كتابة: <strong>@Model.Check.Amount</strong>
        </div>

        <!-- Bank -->
        <div class="bank-section">
            البنك: <strong>@Model.Check.Bank.ToString()</strong>
        </div>

        <!-- Signature -->
        <div class="signature">
            <span>التوقيع:</span>
            <div style="border-top: 1px solid #000; width: 200px; margin-top: 10px;"></div>
        </div>

        <!-- Footer -->
        <div class="footer">
            يُرجى عدم الكتابة تحت هذا السطر
        </div>
    </div>
</body>

</html>
