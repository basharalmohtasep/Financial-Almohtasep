@model EmployeeTransactionViewModel;
@using Financial_Almohtasep.Models.Enum;
@using Financial_Almohtasep.Data;
@using Financial_Almohtasep.Models;

<div class="container mt-5">
    <h2 class="mb-4"> Add Employee Transaction </h2>
    <form asp-action="AddTransaction" method="post" class="needs-validation">
        <div class="mb-3">
            <label for="Transaction" class="form-label">Transaction Amount</label>
            <input asp-for="Amount" class="form-control" placeholder="Enter transaction amount" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="TransactionDate" class="form-label">Transaction Date</label>
            <input asp-for="TransactionDate" type="date" class="form-control" />
            <span asp-validation-for="TransactionDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="TransactionType" class="form-label">Transaction Type</label>
            <select asp-for="TransactionType" class="form-control">
                <option value="">Select Type</option>
                @foreach (var type in Enum.GetValues(typeof(TransactionType)))
                {
                    <option value="@((int)type)">@type</option>
                }
            </select>
            <span asp-validation-for="TransactionType" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="EmployeeId" class="form-label">Employee Name</label>
            <select asp-for="EmployeeId" class="form-control">
                <option value="">Select Employee</option>
                @foreach (var employee in (List<BaseIdNameModel<Guid>>)ViewBag.EmployeeList)
                {
                    <option value="@employee.Id">@employee.Name</option>
                }
            </select>
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


