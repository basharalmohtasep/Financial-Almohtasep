@* @model List<ChequeDetailDtoModel> *@
@using Financial_Almohtasep.Data;
@{
    ViewData["Title"] = "Cheque";
}

<div class="container mt-4">
    <h2 class="mb-4">Cheque List</h2>

    <div class="d-flex justify-content-between mb-4">
        <a asp-controller="Cheque" asp-action="Add" class="btn btn-success">Add Cheque</a>
    </div>

    <table class="table table-striped table-bordered" id="employeeTable">
        <thead class="table-dark">
            <tr>
                <th>Cheque Number</th>
                <th>Amount</th>
                <th>Payee Name</th>
                <th>Bank Name</th>
                <th>Currency</th>
                <th>DueDate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Cheque in ViewBag.Data as List<ChequeDetails>)
            {
                
                <tr>
                    <td>@Cheque.ChequeNumber</td>
                    <td>@Cheque.Amount</td>
                    <td>@Cheque.payees</td>
                    <td>@Cheque.bankName</td>
                    <td>@Cheque.currency</td>
                    <td>@Cheque.DueDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="@Url.Action("Index", "EmployeesTransaction", new { EmployeeId = Cheque.Id })" class="btn btn-primary btn-sm">View</a>
                        <a href="@Url.Action("Edit", "Employee", new { id = Cheque.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-controller="Employee" asp-route-id="@Cheque.Id" method="post" style="display:inline-block;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
