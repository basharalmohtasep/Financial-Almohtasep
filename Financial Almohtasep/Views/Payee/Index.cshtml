@model PayeeDtoModel;
@{
    ViewData["Title"] = "Payee";
}
<div class="container mt-4">
    <h2 class="mb-4">Check List</h2>
    <div class="d-flex justify-content-between mb-4">
        <a asp-controller="Payee" asp-action="Add" class="btn btn-success">Add Payee</a>
        <a asp-controller="Check" asp-action="Index" class="btn btn-outline-secondary">Cansel</a>
    </div>
     <form asp-action="Index" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <label for="id" class="form-label">Select Payee</label>
                <select id="PayeeSelect" name="id" class="form-select">
                    <option value="">Select Payee</option>
                    @foreach (var payee in ViewBag.Payees)
                    {
                        if (ViewBag.PaeeyId is not null && payee.Id.Equals(ViewBag.PaeeyId))
                        {
                            <option value="@payee.Id" selected>@payee.Name</option>
                        }
                        else
                        {
                            <option value="@payee.Id">@payee.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Apply Filters</button>
            </div>
        </div>
    </form>
    <table class="table table-striped table-bordered" id="employeeTable">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Note</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model is not null)
            {
                @foreach (var Payee in Model.Payee)
                {
                    <tr>
                        <td>@Payee.Name</td>
                        <td>@Payee.Note</td>
                        <td>@Payee.Type</td>
                        <td>
                            <a href="@Url.Action("Edit", "payee", new { id = Payee.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <form asp-action="Delete" asp-controller="payee" asp-route-id="@Payee.Id" method="post" style="display:inline-block;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>