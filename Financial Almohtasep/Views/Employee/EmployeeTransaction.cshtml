@model EmployeeTransactionDtoModel;
@using Financial_Almohtasep.Data;
@using Financial_Almohtasep.Models;
@{
   
    ViewData["Title"] = "EmployeeTransaction";
}

<h2>Transaction List</h2>
<a asp-controller="Employee" asp-action="AddTransaction" class="btn btn-success">Add Transaction</a>
<a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Cancel</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Transaction</th>
            <th>TransactionType</th>
            <th>NetSalary</th>
            <th>TransactionDate</th>
            <th>Actions</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var Transaction in Model.EmployeeTransaction)
        {
            <tr>
                <td>@Transaction.Amount</td>
                <td>@Transaction.TransactionType</td>
                <td>@Transaction.NetSalary</td>
                <td>@Transaction.TransactionDate</td>
                <td>
                    <a href="@Url.Action("EmployeeTransaction", "Employee", new { id = Transaction.EmployeeId })" class="btn btn-primary">View</a>
                    <a href="@Url.Action("EditTransaction", "Employee", new { id = Transaction.Id })" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteTransaction" asp-controller="Employee" asp-route-id="@Transaction.Id" method="post" style="display:inline-block;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>